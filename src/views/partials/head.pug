mixin makeHead(title, description)
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    //- meta(http-equiv="Content-Security-Policy", content="default-src 'self'; font-src https://fonts.gstatic.com; style-src https://fonts.googleapis.com; child-src 'none'; object-src 'none'")
    title #{title || htmlWebpackPlugin.options.SITE_TITLE}
    meta(name='description', content= description || htmlWebpackPlugin.options.DESCRIPTION)
    meta(property='og:url', content= htmlWebpackPlugin.options.SITE_URL)
    meta(property='og:site_name', content= htmlWebpackPlugin.options.SITE_TITLE)
    meta(property='og:type', content='website')
    meta(property='og:title', content= title || htmlWebpackPlugin.options.SITE_TITLE)
    meta(property='og:description', content= description || htmlWebpackPlugin.options.DESCRIPTION)
    meta(property='og:image', content='')
    meta(name='twitter:title', content= title || htmlWebpackPlugin.options.SITE_TITLE)
    meta(name='twitter:description', content= description || htmlWebpackPlugin.options.DESCRIPTION)
    meta(name='twitter:image', content='')
    meta(name='twitter:image:alt', content='')
    meta(name='twitter:site', content= htmlWebpackPlugin.options.SITE_URL)
    link(rel='canonical', href= htmlWebpackPlugin.options.SITE_URL)
    
    <!--[if lte IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv-printshiv.min.js" type="text/javascript"></script>
    <![endif]-->

    //- vendor files
    link(rel="stylesheet", href= htmlWebpackPlugin.options.PP + 'vendor/html5boilerplate.css')
    link(rel="stylesheet", href= htmlWebpackPlugin.options.PP + 'vendor/normalize.min.css')
